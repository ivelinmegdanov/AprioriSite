@using AprioriSite.Core.Models

@model IEnumerable<UserOrdersViewModel>

@{
	ViewData["Title"] = "Manage Orders";
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<title>@ViewData["Title"]</title>
	<link rel="stylesheet" href="~/css/style.css" />
	<link rel="stylesheet" href="~/plugins/toastr/toastr.min.css" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.css" />
</head>
<body>
	<partial name="_MainMenu" />
	<div class="row">
		<div class="col-12">
			<div class="card">
				<h1 class="heading"> Manage <span>Users</span> Orders </h1>
				<h1 class="heading"> Manage <span>Users</span> Orders</h1>
				<h2><a asp-action="AdminPanel">Back to Admin Panel</a> </h2>
				<p></p>
				@foreach (var order in Model)
				{
					<form id="manageuserorders" method="post">
						<input type="hidden" name="Id" value="@order.Id" />
						<div class="users">
							<table class="table table-hover text-nowrap">
								<tbody>
									<img src="@order.CustomImage" width="90">
									<table style="width:100%">
										<tr>
											<th>First Name</th>
											<th>Last Name</th>
											<th>User Id</th>
										</tr>
										<tr>
											<td>@order.FirstName</td>
											<td>@order.LastName</td>
											<td>@order.UserId</td>
										</tr>
									</table>
									<table style="width:100%">
										<tr>
											<th>Order Date</th>
											<th>Item Id</th>
											<th>Quantity</th>
											<th>Size</th>
											<th>Price</th>
										</tr>
										<tr>
											<td>@order.OrderDate</td>
											<td>@order.ItemId</td>
											<td>@order.Quantity</td>
											<td>@order.Size</td>
											<td>@order.Price</td>
										</tr>
									</table>
									<table style="width:100%">
										<tr>
											<th>Country</th>
											<th>Province</th>
											<th>City</th>
											<th>Zip</th>
											<th>Address</th>
										</tr>
										<tr>
											<td>@order.Country</td>
											<td>@order.Province</td>
											<td>@order.City</td>
											<td>@order.Zip</td>
											<td>@order.Address</td>
										</tr>
									</table>
									<table style="width:100%">
										<tr>
											<th>Confirmed</th>
											<th>Shipped</th>
											<th>Arrived</th>
											<th>Paid</th>
										</tr>
										<tr>
											<td>@order.Confirmed</td>
											<td>@order.Shipped</td>
											<td>@order.Arrived</td>
											<td>@order.Paid</td>
										</tr>
									</table>
									<tr>
										<h2>Actions</h2>
										<h3>
											<button id="login-submit" type="submit" class="btn btn-primary btn-block">Confirm order</button>
										</h3>
									</tr>
								</tbody>
							</table>
						</div>
					</form>
				}
			</div>

		</div>
	</div>
	<script src="~/js/script.js"></script>
	<partial name="_UserMessages" />
</body>
