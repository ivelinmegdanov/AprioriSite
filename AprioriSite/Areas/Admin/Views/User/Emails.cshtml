@using AprioriSite.Core.Models
@model IEnumerable<EmailViewModel>
@{
	ViewData["Title"] = "User Emails";
	Layout = null;
}

<head>
	<title>@ViewData["Title"]</title>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="~/css/style.css" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.css" />
</head>

<body>
	<partial name="_MainMenu" />
	<div class="row">
		<h1 class="heading"> User <span>Emails</span> </h1>
		<h1 class="heading"> User <span>Emails</span> </h1>
		<div class="users">
			<div class="users">
				@foreach (var email in Model)
				{
					<form id="emails" method="post">
						<div class="emails">
							<table class="table table-hover text-nowrap">
								<input type="hidden" name="Id" value="@email.Id" />
								<tbody>
									<table style="width:100%">
										<tr>
											<th>Name</th>
											<th>User Email</th>
											<th>Phone Number</th>
										</tr>
										<tr>
											<td>@email.Name</td>
											<td>@email.UserEmail</td>
											<td>@email.PhoneNumber</td>
										</tr>
									</table>
									<table style="width:100%">
										<tr>
											<th>Subject</th>
											<th>Message</th>
										</tr>
										<tr>
											<td>@email.Subject</td>
											<td>@email.Message</td>
										</tr>
									</table>
								</tbody>
							</table>
							<button id="login-submit" type="submit" class="btn btn-primary btn-block">Delete</button>
						</div>
					</form>
				}
			</div>
		</div>
	</div>
	<script src="~/js/script.js"></script>
	<partial name="_UserMessages" />
</body>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}