@using AprioriSite.Core.Models
@model UserEditViewModel
@{
	ViewData["Title"] = "User Delete";
	Layout = null;
}

<head>
	<title>@ViewData["Title"]</title>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" href="~/css/style.css" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.css" />
</head>

<body>
	<partial name="_MainMenu" />
	<div class="row">
		<h1 class="heading"> Are you sure you want to delete this user? </h1>
		<h1 class="heading"> Are you sure you want to delete this user? </h1>
		<div class="users">
			<form id="delete" method="post">
				<input type="hidden" name="Id" value="@Model.Id" />
				<h2>User</h2>
				<h3>@Model.Username</h3>
				<h2>Email</h2>
				<h3>@Model.Email</h3>
				<h2>Action</h2>
				<div class="row">&nbsp;</div>
				<div class="row">
					<div class="col-4">
						<button id="login-submit" type="submit" class="btn btn-primary btn-block">Confirm</button>
					</div>
					<!-- /.col -->
				</div>
			</form>
		</div>
	</div>
	<script src="~/js/script.js"></script>
	<partial name="_UserMessages" />
</body>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}