@using AprioriSite.Core.Models

@model IEnumerable<UserListViewModel>
@{
	ViewData["Title"] = "Admin Panel";
	Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
	<title>@ViewData["Title"]</title>
	<link rel="stylesheet" href="~/css/style.css" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.css" />
</head>
<body>
	<partial name="_MainMenu" />
	<div class="row">
		<div class="col-12">
			<div class="card">
				<h1 class="heading"> Manage <span>Users</span> </h1>
				<h1 class="heading"> Manage <span>Users</span> </h1>
				<div class="card-body table-responsive p-0">
					<table class="table table-hover text-nowrap">
						<tbody>
							@foreach (var user in Model)
							{
								<tr>
									<h2>User</h2>
									<h3>@user.Name</h3>
									<h2>Email</h2>
									<h3>@user.Email</h3>
									<h2>Actions</h2>
									<h3>
										<a asp-area="admin" asp-action="edit" asp-controller="user" asp-route-id="@user.Id" class="btn btn-block btn-outline-success btn-xs">Edit</a>
										<a asp-area="admin" asp-action="roles" asp-controller="user" asp-route-id="@user.Id" class="btn btn-block btn-outline-danger btn-xs">Set Role</a>
									</h3>
								</tr>
							}
						</tbody>
					</table>
				</div>

			</div>

		</div>
	</div>
		<script src="~/js/script.js"></script>
</body>
