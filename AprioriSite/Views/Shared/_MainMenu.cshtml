@using AprioriSite.Core.Constants
<script src="https://kit.fontawesome.com/b99e675b6e.js"></script>


<!-- header section starts  -->
<header class="header">

	<a href="/" class="logo"> <i class="fas fa-shopping-cart"></i> Apriori </a>

	<nav class="navbar">
		<a href="/products/products">catalog</a>
		<a href="/cups">cups</a>
		<a href="/cases">cases</a>
		<a href="/contact">contact</a>
		<a href="/customproducts">custom products</a>
	</nav>

	<div class="icons">
		@if (User.IsInRole(UserConstants.Roles.Administrator))
		{
			<a href="/admin/user/adminpanel" class="fas fa-tools"></a>
		}
		<a href="cart" class="fas fa-shopping-cart"></a>
		<div class="dropdown">
			<a class="fas fa-user"></a>
			<div class="dropdown-content">
				<div class="login">
					<h3>User Profile</h3>
					<partial name="_LoginPartial" />
					<partial name="_LogoutPartial" />
				</div>
			</div>
		</div>
	</div>

	<form action="" class="search-form">
		<input type="search" name="" placeholder="search here..." id="search-box">
		<label for="search-box" class="fas fa-search"></label>
	</form>

</header>

<script>
	var dd_main = document.querySelector(".dd_main");

	dd_main.addEventListener("click", function(){
		this.classList.toggle("active");
	})
</script>