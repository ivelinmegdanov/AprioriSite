@using System.Security.Claims
@model AprioriSite.Core.Models.EmailViewModel

@{
	ViewData["Title"] = "Contact us";
	Layout = null;
}

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>@ViewData["Title"]</title>
	<link rel="stylesheet" href="~/css/style.css">
</head>


<partial name="_MainMenu" />

<section class="contact" id="contact">

	<h1 class="heading"> <span>contact</span> us </h1>

	<div class="icons-container">

		<div class="icons">
			<i class="fas fa-map-marker-alt"></i>
			<h3>address</h3>
			<p>Bul. „Nikola Gabrovski“ 39B</p>
		</div>

		<div class="icons">
			<i class="fas fa-envelope"></i>
			<h3>email</h3>
			<p>apriori@gmail.com</p>
			<p>iv4o.megdanov@gmail.com</p>
		</div>

		<div class="icons">
			<i class="fas fa-phone"></i>
			<h3>phone</h3>
			<p>088 879 2212</p>
			<p>088 933 7266</p>
		</div>

	</div>

	<div class="row">
		<form asp-action="ContactUs" method="post" enctype="multipart/form-data">
			<input asp-for="UserId" type="hidden" name="UserId" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)" />
			<h3>get in touch</h3>
			<div class="inputBox">
				<input asp-for="Name" class="form-control" style="border: 1px solid #5b5b5b" type="text" placeholder="your name" minlength="3" required />
				<span asp-validation-for="Name" class="text-danger"></span>

				<input asp-for="UserEmail" class="form-control" style="border: 1px solid #5b5b5b" type="email" placeholder="your email" required />
				<span asp-validation-for="UserEmail" class="text-danger"></span>
			</div>
			<div class="inputBox">
				<input asp-for="PhoneNumber" class="form-control" style="border: 1px solid #5b5b5b" type="tel" placeholder="your number" required />
				<span asp-validation-for="PhoneNumber" class="text-danger"></span>

				<input asp-for="Subject" class="form-control" style="border: 1px solid #5b5b5b" type="text" placeholder="your subject" required minlength="3" />
				<span asp-validation-for="Subject" class="text-danger"></span>
			</div>
			<textarea asp-for="Message" class="form-control" style="border: 1px solid #5b5b5b" cols="30" rows="10" placeholder="your message" required minlength="5">your message</textarea>
			<span asp-validation-for="Message" class="text-danger"></span>
			<input type="submit" value="send message" class="btn">
		</form>

		<iframe class="map" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d182.15064806367397!2d25.618745734835578!3d43.07486719131658!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x40a9260d2f6d07bb%3A0xca0cd7110b390aaa!2z0LHRg9C7LiDigJ7QndC40LrQvtC70LAg0JPQsNCx0YDQvtCy0YHQutC44oCcIDM50JEsIDUwMDIg0KDQsNC50L7QvSDQl9Cw0L_QsNC00LXQvSwg0JLQtdC70LjQutC-INCi0YrRgNC90L7QstC-!5e0!3m2!1sbg!2sbg!4v1649086134825!5m2!1sbg!2sbg" allowfullscreen="" loading="lazy"></iframe>

	</div>

</section>

<partial name="_Footer" />

<script src="~/js/script.js"></script>